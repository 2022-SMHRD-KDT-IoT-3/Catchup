<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Infectivity">

    <TextView
        android:id="@+id/tv_all_infectivity"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:background="@drawable/layout_border"
        android:fontFamily="@font/henam"
        android:gravity="center"
        android:text="전체전염도 : 33%"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_infectdate" />

    <TextView
        android:id="@+id/tv_part_infectivity"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_marginTop="428dp"
        android:layout_weight="1"
        android:background="@drawable/layout_border"
        android:fontFamily="@font/henam"
        android:gravity="center"
        android:text="A동 전염도 : 33%"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_infectdate" />

    <TextView
        android:id="@+id/tv_infectdate"
        android:layout_width="106dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="2022-06-13"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_infectivity_back"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/henam"
            android:gravity="left"
            android:text="        전염도"
            android:textSize="30sp" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:entries="@array/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_infectdate" />

    <ImageView
        android:id="@+id/img_s_1"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_2"
        app:layout_constraintEnd_toStartOf="@+id/img_s_2"
        app:layout_constraintTop_toTopOf="@+id/img_s_2"
        app:layout_constraintVertical_bias="0.351"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_4"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_5"
        app:layout_constraintEnd_toStartOf="@+id/img_s_5"
        app:layout_constraintTop_toTopOf="@+id/img_s_5"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_5"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/img_s_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_s_2"
        app:layout_constraintTop_toBottomOf="@+id/img_s_2"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_7"
        android:layout_width="78dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_s_8"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_8"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/img_s_5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_s_5"
        app:layout_constraintTop_toBottomOf="@+id/img_s_5"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_9"
        android:layout_width="78dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_s_8"
        app:srcCompat="@drawable/dead" />

    <ImageView
        android:id="@+id/img_s_6"
        android:layout_width="78dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_s_5"
        app:srcCompat="@drawable/dead" />

    <ImageView
        android:id="@+id/img_s_2"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginTop="104dp"
        android:onClick="showDatePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_infectdate"
        app:srcCompat="@drawable/normal" />

    <ImageView
        android:id="@+id/img_s_3"
        android:layout_width="78dp"
        android:layout_height="82dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_s_2"
        app:layout_constraintStart_toEndOf="@+id/img_s_2"
        app:layout_constraintTop_toTopOf="@+id/img_s_2"
        app:srcCompat="@drawable/dead" />

    <Button
        android:id="@+id/btn_changedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:onClick="showDatePicker2"
        android:text="날짜변경"
        app:layout_constraintBottom_toBottomOf="@+id/tv_infectdate"
        app:layout_constraintStart_toEndOf="@+id/tv_infectdate"
        app:layout_constraintTop_toTopOf="@+id/tv_infectdate" />

</androidx.constraintlayout.widget.ConstraintLayout>